			$delete_password = trim($_POST["pwd"]);
		}
		
		if (empty($username_err) && empty($password_err))
		{
			
			// Prepare a select statement
			$query = "SELECT id, username, password FROM userTable WHERE username = ?";
        
			if($stmt = mysqli_prepare($conn, $query))
			{
