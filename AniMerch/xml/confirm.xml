				if ($conn)
				{
					$query = "INSERT INTO enquiryTable(firstname, lastname, email,
						subject, address, city, state, postcode, phonenum,
						product, comment)
						VALUES ('$fname', '$lname', '$email', '$subject', 
						'$address', '$city', '$state', '$postcode', 
						'$phonenum', '$product', '$comment') ";
